# ============================================
# Den Beyers - Environment Variables
# ============================================
# Copy this file to .env and fill in the values
# ============================================

# Database
DATABASE_URL="postgresql://denbeyers:denbeyers@localhost:5432/denbeyers"

# Keycloak OIDC
KEYCLOAK_ISSUER="http://localhost:8080/realms/denbeyers"
KEYCLOAK_CLIENT_ID="denbeyers-app"
KEYCLOAK_CLIENT_SECRET="dev-secret-change-in-production"
KEYCLOAK_REDIRECT_URL="http://localhost:3000/auth/callback"

# S3 / MinIO
S3_ENDPOINT="http://localhost:9000"
S3_REGION="us-east-1"
S3_BUCKET="denbeyers"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin"

# App Settings
MAX_FILE_SIZE_MB="200"
MAX_STICKY_ITEMS="10"

# Node
NODE_ENV="development"

